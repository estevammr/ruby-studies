<h1>Listing events task</h1>
 
<table class="table table-hover">
  <tr>
    <th>Quantity event</th>
    <th>Edit event</th>
  </tr>
  <% @events.each do |event| %>
      <tr>
        <td><%= event.quantity %></td>
        <td><%= link_to 'Edit', edit_task_event_path(params[:task_id], event), :class => "btn btn-primary" %></td>
      </tr>
  <% end %>
</table>
    

<h1>New Task</h1>
<%= form_for :task do |f| %>
  <p>
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </p>
 
  <p>
    <%= f.label :start_time %><br>
    <%= datetime_local_field(:task, :start_time) %>
  </p>

  <p>
    <%= f.label :end_time %><br>
    <%= datetime_local_field(:task, :end_time) %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
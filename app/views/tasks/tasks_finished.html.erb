<h1>Listing tasks finished</h1>
 
<table class="table table-hover">
  <tr>
    <th>Subject</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Finish<th>
  </tr>
  <% @tasks.each do |task| %>
    <% if !task.finished_at.nil? %>
      <tr>
        <td><%= task.subject %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time ? task.end_time : 'No date' %></td>
        <td><%= task.finished_at %></td>
      </tr>
    <% end %>
  <% end %>
</table>

<%= link_to 'Back', tasks_path, :class => "btn btn-default" %>

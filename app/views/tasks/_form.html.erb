<%= form_for @task do |f| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </p>
 
  <p>
    <%= f.label :start_time %><br>
    <%= datetime_local_field(:task, :start_time) %>
  </p>

  <p>
    <%= f.label :end_time %><br>
    <%= datetime_local_field(:task, :end_time) %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

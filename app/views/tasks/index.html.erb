<h1>Listing tasks</h1>
 
<table>
  <tr>
    <th>Subject</th>
    <th>Start time</th>
    <th>End time</th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.subject %></td>
      <td><%= task.start_time %></td>
      <td><%= task.end_time %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
    </tr>
  <% end %>
</table>